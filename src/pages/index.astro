            class="underline hover:text-pink-300"
          >
            @YourS4nty</a
          >
        </p>
      </footer>
    </div>

    <div>
      <!-- LIGHTBOX -->
      <div
        id="lightbox"
        class="fixed inset-0 bg-black/90 hidden items-center justify-center z-[9999]"
      >
        <button
          id="close-lightbox"
          class="absolute top-5 right-5 text-white text-3xl">&times;</button
        >
        <button id="prev-lightbox" class="absolute left-5 text-white text-4xl"
          >&#10094;</button
        >
        <img id="lightbox-img" class="max-h-[90%] max-w-[90%] object-contain" />
        <button id="next-lightbox" class="absolute right-5 text-white text-4xl"
          >&#10095;</button
        >
      </div>
    </div>

    <!-- SCRIPTS -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // NAV / PANTALLAS
        const navBtns = document.querySelectorAll(".nav-btn");
        const sections = {
          home: document.getElementById("home"),
          comiss: document.getElementById("comiss"),
          about: document.getElementById("about"),
          tos: document.getElementById("tos"),
        };
        let current: "home" | "comiss" | "about" | "tos" = "home";

        // Asegurar estado inicial
        Object.keys(sections).forEach((key) => {
          const el = sections[key as keyof typeof sections];
          if (!el) return;
          if (key === current) {
            el.classList.add("is-visible");
            el.classList.remove("is-hidden");
          } else {
            el.classList.remove("is-visible");
            el.classList.add("is-hidden");
          }
        });

        function setActiveNav(buttonTarget: any) {
          navBtns.forEach((btn) => {
            const t = (btn as HTMLElement).dataset.target;
            if (t === buttonTarget) {
              btn.setAttribute("aria-pressed", "true");
            } else {
              btn.setAttribute("aria-pressed", "false");
            }
          });
        }

        function showSection(target: "home" | "comiss" | "about" | "tos") {
          if (target === current) return;
          const fromEl = sections[current];
          const toEl = sections[target];
          if (!toEl) return;

          // hide current
          if (fromEl) {
            fromEl.classList.remove("is-visible");
            fromEl.classList.add("is-hidden");
          }

          // show target
          toEl.classList.remove("is-hidden");
          // forzar reflow para anim
          void toEl.offsetWidth;
          toEl.classList.add("is-visible");

          current = target;
          setActiveNav(target);

          // Carrusel: start/stop según sección visible
          if (current === "home") startAutoplay();
          else stopAutoplay();
        }

        navBtns.forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = (btn as HTMLElement).dataset.target as
              | "home"
              | "comiss"
              | "about"
              | "tos";
            showSection(target);
          });
        });

        // -------------------------------------------------------
        // CARRUSEL (dentro de HOME)
        const carouselInner = document.getElementById("carousel-inner");
        const prevBtn = document.getElementById("prev-btn");
        const nextBtn = document.getElementById("next-btn");
        let currentIndex = 0;
        let autoplayInterval:
          | string
          | number
          | NodeJS.Timeout
          | null
          | undefined = null;
        const autoplayDuration = 3000;

        function updateCarousel() {
          if (!carouselInner) return;
          const total = carouselInner.children.length;
          if (total === 0) return;
          carouselInner.style.transform = `translateX(-${currentIndex * 100}%)`;
        }

        function startAutoplay() {
          stopAutoplay();
          if (!carouselInner) return;
          const total = carouselInner.children.length;
          if (total <= 1) return;
          autoplayInterval = setInterval(() => {
            currentIndex = (currentIndex + 1) % total;
            updateCarousel();
          }, autoplayDuration);
        }

        function stopAutoplay() {
          if (autoplayInterval) {
            clearInterval(autoplayInterval);
            autoplayInterval = null;
          }
        }

        prevBtn?.addEventListener("click", () => {
          if (!carouselInner) return;
          const total = carouselInner.children.length || 1;
          currentIndex = (currentIndex - 1 + total) % total;
          updateCarousel();
        });

        nextBtn?.addEventListener("click", () => {
          if (!carouselInner) return;
          const total = carouselInner.children.length || 1;
          currentIndex = (currentIndex + 1) % total;
          updateCarousel();
        });

        // Pause autoplay on hover
        const carouselEl = document.getElementById("image-carousel");
        carouselEl?.addEventListener("mouseenter", stopAutoplay);
        carouselEl?.addEventListener("mouseleave", () => {
          if (current === "home") startAutoplay();
        });

        // Iniciar autoplay si HOME está visible al inicio
        if (current === "home") startAutoplay();

        // -------------------------------------------------------
        // "Ver todas las obras" toggle (full-gallery)
        const viewAllBtn = document.getElementById("view-all-btn");
        const fullGallery = document.getElementById("full-gallery");

        viewAllBtn?.addEventListener("click", () => {
          if (!fullGallery) return;
          if (fullGallery.classList.contains("hidden")) {
            fullGallery.classList.remove("hidden");
            // forzar reflow
            void fullGallery.offsetWidth;
            fullGallery.classList.remove("opacity-0");
            fullGallery.classList.add("opacity-100");
            viewAllBtn.textContent = "👆 Ocultar galería";
            // detener autoplay mientras la galería está abierta
            stopAutoplay();
          } else {
            fullGallery.classList.remove("opacity-100");
            fullGallery.classList.add("opacity-0");
            fullGallery.addEventListener(
              "transitionend",
              function handler() {
                fullGallery.classList.add("hidden");
                fullGallery.removeEventListener("transitionend", handler);
              },
              { once: true },
            );
            viewAllBtn.textContent = "🖼️ Ver todas las obras";
            if (current === "home") startAutoplay();
          }
        });
      });
      // -------------------------------------------------------
      // LIGHTBOX
      document.addEventListener("DOMContentLoaded", () => {
        const galleryImages = document.querySelectorAll("#comiss img"); // todas las imágenes
        const lightbox = document.getElementById("lightbox");
        const lightboxImg = document.getElementById("lightbox-img");
        const closeBtn = document.getElementById("close-lightbox");
        const prevBtn = document.getElementById("prev-lightbox");
        const nextBtn = document.getElementById("next-lightbox");

        let currentIndex = 0;

        function showImage(index: number) {
          if (index < 0) index = galleryImages.length - 1;
          if (index >= galleryImages.length) index = 0;
          currentIndex = index;
          if (lightboxImg) {
            const imgEl = galleryImages[currentIndex];
            if (
              imgEl instanceof HTMLImageElement &&
              lightboxImg instanceof HTMLImageElement
            ) {
              lightboxImg.src = imgEl.src;
            }
          }
        }

        galleryImages.forEach((img, i) => {
          img.addEventListener("click", () => {
            if (lightbox) {
              lightbox.classList.remove("hidden");
              lightbox.classList.add("flex");
            }
            showImage(i);
          });
        });

        if (closeBtn) {
          closeBtn.addEventListener("click", () => {
            if (lightbox) {
              lightbox.classList.add("hidden");
              lightbox.classList.remove("flex");
            }
          });
        }

        if (prevBtn) {
          prevBtn.addEventListener("click", () => showImage(currentIndex - 1));
        }
        if (nextBtn) {
          nextBtn.addEventListener("click", () => showImage(currentIndex + 1));
        }

        if (lightbox) {
          lightbox.addEventListener("click", (e) => {
            if (e.target === lightbox) {
              lightbox.classList.add("hidden");
              lightbox.classList.remove("flex");
            }
          });
        }

        document.addEventListener("keydown", (e) => {
          if (!lightbox || lightbox.classList.contains("hidden")) return;
          if (e.key === "Escape" && closeBtn) closeBtn.click();
          if (e.key === "ArrowLeft" && prevBtn) prevBtn.click();
          if (e.key === "ArrowRight" && nextBtn) nextBtn.click();
        });

        // swipe
        let startX = 0;
        if (lightbox) {
          lightbox.addEventListener("touchstart", (e) => {
            startX = e.touches[0].clientX;
          });
          lightbox.addEventListener("touchend", (e) => {
            const endX = e.changedTouches[0].clientX;
            if (startX - endX > 50 && nextBtn) nextBtn.click(); // swipe left
            if (endX - startX > 50 && prevBtn) prevBtn.click(); // swipe right
          });
        }
      });
    </script>
  </body>
</html>
