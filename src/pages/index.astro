    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const carouselInner = document.getElementById('carousel-inner');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const viewAllBtn = document.getElementById('view-all-btn');
        const fullGallery = document.getElementById('full-gallery');

        let currentIndex = 0;
        const totalItems = carouselInner.children.length;
        let autoplayInterval;
        const autoplayDuration = 3000;

        function updateCarousel() {
          carouselInner.style.transform = `translateX(-${currentIndex * 100}%)`;
        }

        function startAutoplay() {
          stopAutoplay();
          autoplayInterval = setInterval(() => {
            currentIndex = (currentIndex + 1) % totalItems;
            updateCarousel();
          }, autoplayDuration);
        }

        function stopAutoplay() {
          clearInterval(autoplayInterval);
        }

        startAutoplay();

        prevBtn.addEventListener('click', () => {
          stopAutoplay();
          currentIndex = (currentIndex - 1 + totalItems) % totalItems;
          updateCarousel();
        });

        nextBtn.addEventListener('click', () => {
          stopAutoplay();
          currentIndex = (currentIndex + 1) % totalItems;
          updateCarousel();
        });

        const carouselContainer = document.getElementById('image-carousel');
        carouselContainer.addEventListener('mouseenter', stopAutoplay);
        carouselContainer.addEventListener('mouseleave', startAutoplay);

        viewAllBtn.addEventListener('click', () => {
          if (fullGallery.classList.contains('hidden')) {
            fullGallery.classList.remove('hidden');
            fullGallery.offsetHeight; 
            fullGallery.classList.add('opacity-100');
            viewAllBtn.textContent = 'üëÜ Ocultar galer√≠a';
            stopAutoplay();
          } else {
            fullGallery.classList.remove('opacity-100');
            fullGallery.addEventListener('transitionend', function handler() {
              fullGallery.classList.add('hidden');
              fullGallery.removeEventListener('transitionend', handler);
            });
            viewAllBtn.textContent = 'üñºÔ∏è Ver todas las obras';
            startAutoplay();
          }
        });
      });
    </script>
